<h1>Listing products</h1>

<table>
  <tr>
    <th>Product type</th>
    <th>Product format</th>
    <th>Theme</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @theme.products.each do |product| %>
  <tr>
    <td><%= product.product_type.description %></td>
    <td><%= product.product_format.description %></td>
    <td><%= product.theme.name %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_theme_product_path(@theme,product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_theme_product_path(@theme) %>
